<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<link rel="stylesheet" href="/style.css">
<title>To-Do List</title>

  </head>
  <body>
    <main>
    <header>
      <h1>book app</h1>
        <nav class="navigation">
          <ul>
            <li><a href="/">View All Tasks</a></li>
            <li><a href="/add">Add a New Task</a></li>
          </ul>
        </nav>

    </header>
      <section id="tasks" class="task-view container">
        <ul>
        <% bananas.forEach(book => { %>
          <li><%= book.title %></li>
          <li><%= book.description %></li>
          <li><%= book.author %></li>
          <li class="book-detail"><a href='/books/<%= book.id %>'>more details</a></li>
          
        <% }) %>
        </ul>
      </section>
    </main>

    <!-- jquery -->
    <script src="https://code.jquery.com/jquery-3.2.1.js"></script>

    <!-- handlebars -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.2.0/handlebars.min.js"></script>

    <!-- frontend js -->
    <script src="./app.js" type="text/javascript"></script>
  </body>
</html>
